<form class="ui stacked segment form" action="/collection/{{movie.id}}/addmovie" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Movie</label>
      <input type="text" name="name" autofocus required title = "Please include a valid Movie Name"
      placeholder="Name">
    </div>
    <div class="field">
      <label>Director</label>
      <input type="text" name="director" required title = "Please include the right director"
      placeholder="Director">
    </div>
  </div>
  <button class="ui blue submit button">Add Movie</button>
</form>